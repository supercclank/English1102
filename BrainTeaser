$(document).ready(makePuzzle);

function makePuzzle(){
		 	$(".pTable").append(" <tr> ");
	 for (var x =0; x<teasers.length; x++){
	 	if((x%4==0)&&(x!=0)){
	 		 $(".pTable").append(" </tr> "+" <tr> ");
	 	}
		$(".pTable tr:last").append(" <td> "+teasers[x]+" </td> ");
	 }
	 $(".pTable").append(" </tr> ");
}

function check(that){
	var id = $(that).parent().attr('id');
	alert(id);
	var promptNumber = id.substr(6);
	var y = $('#' + id + ' > input').val();
	if (y===answers[parseInt(promptNumber)-1]){
		alert("wooh");
		setPicture(id);
	}
}

function setPicture(id){
	div = "#"+id;
	alert($(div).html());
	$(div).html("<img src='correct.png'>");
	alert($(div).html());
	//$(div).children('img').attr('src','correct.png');
}
