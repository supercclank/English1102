$(document).ready(makePuzzle);

function makePuzzle(){
	 for (var x =0; x<teasers.length; x++){
	 	if(x%6==0){
	 		 $(".pTable").append("</tr> "+" <tr>");
	 	}
		$(".pTable").append("<td>"+teasers[x]+"</td>");
	 }
	 $(".pTable").append("</tr>");
}

function check(that){
	var id = $(that).parent().attr('id');
	alert(id);
	var promptNumber = id[6];
	var y = $('#' + id + ' > input').val();
	if (y===answers[parseInt(promptNumber)-1]){
		alert("wooh");
		setPicture(id);
	}
}

function setPicture(id){
	div = "#"+id;
	$(div).html("<img src='correct.png'>");
	//$(div).children('img').attr('src','correct.png');
}
